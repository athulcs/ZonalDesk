<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonTheme" >
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/button</item>
    </style>
    <style name="EditTextTheme">
        <item name="android:textColor">@color/textPrimaryColor</item>
        <item name="android:textColorHighlight">@color/textPrimaryColor</item>
        <item name="android:textColorHint">@color/textPrimaryColor</item>
    </style>
    <style name="ButtonThemeP" parent="ButtonTheme">
        <item name="android:layout_marginTop">10dp</item>
    </style>

</resources>
